{
  "name": "ytify",
  "type": "module",
  "version": "7.8.0",
  "description": "A modern YouTube music player built with SolidJS and Electron",
  "author": {
    "name": "Ytify Team"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "update": "npx npm-check-updates -u",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:preview": "cross-env NODE_ENV=production electron .",
    "build:windows": "npm run build && electron-builder --config build-configs/windows/electron-builder.json",
    "build:macos": "npm run build && electron-builder --config build-configs/macos/electron-builder.json",
    "build:linux": "npm run build && electron-builder --config build-configs/linux/electron-builder.json",
    "build:desktop": "npm run build:windows && npm run build:macos && npm run build:linux",
    "android:init": "npx cap init",
    "android:add": "npx cap add android",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run build && npx cap sync android && npx cap build android",
    "android:run": "npx cap run android"
  },
  "dependencies": {
    "express": "^4.21.2",
    "hls.js": "^1.5.20",
    "solid-js": "^1.9.4",
    "sortablejs": "^1.15.6"
  },
  "devDependencies": {
    "@netlify/blobs": "^8.1.0",
    "@netlify/edge-functions": "^2.11.1",
    "@types/node": "^22.13.1",
    "@types/sortablejs": "^1.15.8",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "eruda": "^3.4.1",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-solid": "^2.11.1",
    "wait-on": "^8.0.3",
    "@capacitor/android": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/electron": "^5.0.0",
    "capacitor": "^5.0.0"
  },
  "browserslist": [
    "defaults"
  ],
  "build": {
    "appId": "com.ytify.app",
    "productName": "Ytify",
    "directories": {
      "output": "release",
      "buildResources": "build-resources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build-resources/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Ytify Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*.node"
    ]
  }
}
